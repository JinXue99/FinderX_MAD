<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_studentbackground"
    tools:context=".CreateNewGroup"
    tools:ignore="ExtraText">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/TVTitle"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:backgroundTintMode="multiply"
        android:shadowColor="#C2716EE7"
        android:text="Create Group"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" /><![CDATA[















    app:layout_constraintStart_toEndOf="@+id/TVGroupMember"
        app:layout_constraintTop_toBottomOf="@+id/ETDescription"
        tools:ignore="SpeakableTextPresentCheck" />

































    ]]>

    <TextView
        android:id="@+id/TVGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:text="Group Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#80000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVTitle" />

    <EditText
        android:id="@+id/ETGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="380dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Enter your group name"
        android:textColor="#4B000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toEndOf="@+id/TVGroupName" />

    <TextView
        android:id="@+id/TVGroupDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Description:"
        android:textColor="#80000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="272dp" />

    <EditText
        android:id="@+id/ETDescription"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Write something..."
        android:textColor="#4B000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVGroupDescription" />


    <Spinner
        android:id="@+id/SPNoMembers"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/noMembers"
        android:spinnerMode="dropdown"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="434dp" />

    <Button
        android:id="@+id/BtnPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#C2716EE7"
        android:text="Publish"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/BtnCancel"
        tools:layout_editor_absoluteY="541dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/BtnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:backgroundTint="#C2716EE7"
        android:text="Cancel"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="541dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TVNoMembers"
        android:layout_width="164dp"
        android:layout_height="34dp"
        android:text="Number of Members"
        app:layout_constraintEnd_toStartOf="@+id/SPNoMembers"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="448dp" />


</androidx.constraintlayout.widget.ConstraintLayout>