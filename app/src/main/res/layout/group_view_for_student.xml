<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="16dp"
    android:backgroundTint="#9F9DFF"
    app:cardCornerRadius="30dp"
    app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:padding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Team 1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tvNumPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:text="People(4)"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvTeamName"
                app:layout_constraintTop_toBottomOf="@+id/tvTeamName" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/right_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivPerson1"
                android:layout_width="36dp"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNumPeople"
                app:srcCompat="@drawable/ic_account_icon_group_people" />

            <ImageView
                android:id="@+id/ivPerson2"
                android:layout_width="36dp"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/ivPerson1"
                app:layout_constraintTop_toTopOf="@+id/ivPerson1"
                app:srcCompat="@drawable/ic_account_icon_group_people" />

            <ImageView
                android:id="@+id/ivPerson3"
                android:layout_width="36dp"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/ivPerson2"
                app:layout_constraintTop_toTopOf="@+id/ivPerson2"
                app:srcCompat="@drawable/ic_account_icon_group_people" />

            <ImageView
                android:id="@+id/ivPerson4"
                android:layout_width="36dp"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/ivPerson3"
                app:layout_constraintTop_toTopOf="@+id/ivPerson3"
                app:srcCompat="@drawable/ic_account_icon_group_people" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>