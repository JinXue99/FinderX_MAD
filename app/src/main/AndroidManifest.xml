<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.finderx_mad">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinderX_MAD"
        tools:targetApi="31">
        <activity
            android:name=".StudentChat"
            android:exported="false" />
        <activity
            android:name=".StudentActivity"
            android:exported="false"
            android:label="@string/title_activity_student2"
            android:theme="@style/Theme.FinderX_MAD.NoActionBar" />
        <activity
            android:name=".TeacherActivity"
            android:exported="false"
            android:label="@string/title_activity_teacher"
            android:theme="@style/Theme.FinderX_MAD.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <meta-data
            android:name="android.app.lib_name"
            android:value="" />

        <activity
            android:name=".SlideActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>